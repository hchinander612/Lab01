	urldate = {2024-03-30},
	date = {2020},
	note = {Publisher: Facultatea de Management – Scoala Nationala de Studii Politice si Administrative ({SNSPA})},
	keywords = {teleworking, {COVID}-19, absenteeism, Human Resource Management, pandemic, presenteeism, workplace},
}

